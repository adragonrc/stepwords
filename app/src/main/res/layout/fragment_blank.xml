<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="10dp"
    tools:context=".BlankFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animationCache="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instrucciones_agregar"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="italic" />


        <Button
                android:id="@+id/btGo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableEnd="@android:drawable/ic_menu_send"
                android:drawableRight="@android:drawable/ic_menu_send"
                android:text="@string/ir"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Oportunidades restantes: "
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvOpRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="25sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btMostrarPub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="Ver Publicidad" />
        </LinearLayout>



</ScrollView>